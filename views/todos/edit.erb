<li id="todo-<%= todo.id %>" class="todo">
  <a class="todo-check <%= 'done' if todo.done %>">
    âœ“
  </a>
  <span>
    <input hx-patch="/todos/<%= todo.id %>"
           hx-on="blur"
           hx-swap="outerHTML"
           hx-target="#todo-<%= todo.id %>"
           hx-include="closest li"
           name="description"
           type="text" value="<%= todo.description %>"
           onfocus="const value = this.value; this.value = ''; this.value = value"
           autofocus="on">
  </span>
  <span class="todo-controls">
    <button
        hx-patch="/todos/<%= todo.id %>"
        hx-swap="outerHTML"
        hx-target="#todo-<%= todo.id %>"
        hx-include="closest li">
      Save
    </button>
  </span>
</li>